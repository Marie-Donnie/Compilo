INST -> 'ident' . ':=' . EXP#1,
BOOLEANEXP -> TB . [ '||' . TB ],
TB -> FB . [ '&&' . FB ],
FB -> PB + '!' . PB,
PB -> EXP . OPREL . EXP + BOOLEAN,
OPREL -> '=' + '<' + '>' + '<=' + '>=' + '!=',
BOOLEAN -> 'true' + 'false',
IF -> 'if' . BOOLEANEXP . 'then' . NUMEXP . ELSE,
ELSE -> (| 'else' . NUMEXP |),
EXP -> NUMEXP + IF,
NUMEXP ->  NUMEXP0 . [ OPNUM . 'number' ],
NUMEXP0 -> 'number',
OPNUM -> '+' + '-',
;
